<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.example.Parent" id="parent">

        <property name="firstname" value="Ali"></property>
        <property name="lastname" value="ahmadi"></property>
    </bean>
    <bean class="org.example.Child" id="child" parent="parent">

        <property name="firstname" value="taghi"/>
    </bean>

</beans>